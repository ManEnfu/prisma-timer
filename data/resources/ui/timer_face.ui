<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="PtTimerFace" parent="AdwBin">
    <property name="focusable">True</property>
    <property name="focus-on-click">True</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="valign">center</property>
        <child>
          <object class="GtkBox">
            <property name="orientation">horizontal</property>
            <property name="halign">center</property>
            <child>
              <object class="GtkLabel" id="minutes">
                <property name="valign">baseline-center</property>
                <property name="label">0</property>
                <style>
                  <class name="time-label"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="colon">
                <property name="valign">baseline-center</property>
                <property name="label">âˆ¶</property>
                <style>
                  <class name="time-label"/>
                  <class name="colon"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="seconds">
                <property name="valign">baseline-center</property>
                <property name="label">00</property>
                <style>
                  <class name="time-label"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="point">
                <property name="valign">baseline-center</property>
                <property name="label">.</property>
                <style>
                  <class name="time-label"/>
                  <class name="small"/>
                  <class name="colon"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="centis">
                <property name="valign">baseline-center</property>
                <property name="label">00</property>
                <style>
                  <class name="time-label"/>
                  <class name="small"/>
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
